{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "runtime": "python313",
      "codebase": "default",
      "ignore": [
        "venv",
        ".venv",
        ".git",
        ".env",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "firebase.json",
        "*.local",
        "**/__pycache__/**",
        "functions/__pycache__/**",
        "functions/fn_imports/__pycache__/**",
        "**/.*",
        "tests/",
        "tests/*"
      ]
    }
  ]
}
